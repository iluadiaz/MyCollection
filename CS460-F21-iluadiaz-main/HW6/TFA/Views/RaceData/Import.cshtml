@model TheFile

@{
    ViewBag.Title = "Upload Your File";
}
<header>
    <a><img src="/Images/Banner.JPEG" align="middle" width="1070" height="250" /></a>
</header>

<form enctype="multipart/form-data" asp-controller="RaceData" asp-action ="import"  
      method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="userFile" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="userFile" class="form-control custom-file-input">
                <label class="custom-file-label">Choose File...</label>
            </div>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Upload</button>
        </div>
    </div>

</form>

<body>
    <br>@ViewBag.SuccessMessage
</body>