@model IEnumerable<Game.Models.Character>
@{
    ViewData["Title"] = "Characters";
}

<h1 class="text-center mb-5">Current Characters</h1>
<form enctype="multipart/form-data" asp-controller="Character" asp-action="Details"method="get" class="mt-3">
<table class="table table-sm">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Created</th>
            <th scope="col">Level</th>
            <th scope="col">Health</th>
            <th scope="col">Class</th>
            <th scope="col"># of Abilities</th>
            <th scope="col"># of Weapons</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(Character c in Model)
        {
            <tr>
                <td>@c.Name</td>  @*Name goes here*@
                    <td>@c.date</td>  @*Created date goes here*@
                    <td>@c.Level</td>  @*Level goes here*@
                    <td>@c.Health</td>  @*Health goes here*@
                    <td>@c.CharacterClass.Name</td>  @*Class name goes here*@
                    <td>@c.CharacterAbilities.Count</td>  @*# of Abilities goes here*@
                    <td>@c.CharacterWeapons.Count</td>  @*# of Weapons goes here*@
                    <td> @Html.ActionLink("Details", "Details", "Character", new { id = c.Id})</td>  @*Details link goes here*@
            </tr>
        }
    </tbody>
</table>
</form>